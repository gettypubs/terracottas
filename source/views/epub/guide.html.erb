<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= data.book.title.short %></title>
    <link href="assets/styles/epub.css" rel="stylesheet" type="text/css"/>
  </head>
  <body>
    <section class="guide" id="guide">
      <% guide = sitemap.find_resource_by_path("guide.html") %>
      <h1 class="page-title">
        <%= guide.data.title %>
      </h1>
      <h3 class="page-author">
        <%= guide.data.author_full_name %>
      </h3>
      <article>
        <%= guide.render(:layout => false ) %>
      </article>
    </section>
  </body>
</html>
