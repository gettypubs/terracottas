%nav.page-header
  .page-header-left
    %a.no-smoothState#search
      %i.ion-search
  .page-header-center
    - if entry
      = link_to "#{site_title}", "#{site_url}/"
      %i.ion-ios-arrow-right.ml1.mr1
      = link_to "Catalogue", "#{site_url}/catalogue/"
      %i.ion-ios-arrow-right.ml1.mr1
      %span= "#{entry[:info][:cat]}"
    - elsif current_page.data.title
      = link_to "#{site_title}", "#{site_url}/"
      %i.ion-ios-arrow-right.ml1.mr1
      %span= current_page.data.title
    - elsif current_page.data.layout == "cover"
      %span= current_page.data.title

