!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "The Middleman"
    = stylesheet_link_tag "application"
    %link{href: "http://cdn.leafletjs.com/leaflet-0.6.4/leaflet.css", rel: "stylesheet"}


  %body
    #nav-primary.nav-primary
      = partial "nav"
    %header.mobile-helper-bar
      %button.hamburger#off-canvas-toggle
        &#9776
    #main.page-content
      = yield
    = javascript_include_tag "http://cdn.leafletjs.com/leaflet-0.6.4/leaflet.js", |
      "https://code.jquery.com/jquery-2.1.1.min.js", "application"
