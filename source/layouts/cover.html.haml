= wrap_layout :application do
  .cover
  .cover-inner
    %h1.cover-title= current_page.data.title
    %h2.cover-subtitle= current_page.data.subtitle
    %h2.cover-author Maria Lucia Ferruzza
  .cover-copy
    .cover-copy-inner
      = yield
  .cover-explore
    %h2.centered.mt3 Highlights from the Catalogue
    = partial(:feature_grid,
      :locals => { :collection => find_in_catalogue(:meta, :featured, true) })
    = link_to "View the Catalogue", "#{site_url}/catalogue/", :class => "button"
  .cover-map
    #map.no-scroll
    .cover-map-inner
      = link_to "View Full Map", "#{site_url}/map/", :class => "button"
  .cover-colophon
    .cover-colophon-inner
      .colophon-text
        :markdown
          **An online collection catalogue published by the J. Paul Getty Museum**
          <br />
          [About](http://gettypubs.github.io/Terracottas/about)
          | [Privacy Policy](http://www.getty.edu/legal/privacy.html)
          | [Terms of Use](http://www.getty.edu/legal/copyright.html)
      .colophon-logo
        = tag :img, :src => image_path("getty_logo.svg"), :alt => "Getty Logo"
