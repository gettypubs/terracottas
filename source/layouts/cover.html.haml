= wrap_layout :application do
  .cover
    .cover-inner
      %h1.cover-title= current_page.data.title
      %h2.cover-subtitle= current_page.data.subtitle
      %br
      %h2.cover-author Maria Lucia Ferruzza
      %a.scroll-down.no-smoothState{ :href => '#toc' }
        %i.ion-chevron-down.h1.ml2.mt1
  .container.cover-content
    .toc#toc
      %h2.centered.mt3 Contents
      = partial "nav"
    .explore.mb2.mt4
      %h2.centered Explore the Collection
      = partial(:grid, :locals => { :collection => find_in_catalogue("featured", true) })

    %br
    %br
  = partial "footer"
