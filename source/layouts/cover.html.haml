= wrap_layout :application do
  .cover
  .cover-inner
    %h1.cover-title= current_page.data.title
    %h2.cover-subtitle= current_page.data.subtitle
    %h2.cover-author Maria Lucia Ferruzza
  .cover-copy
    .cover-copy-inner
      %h2.centered South Italian Terracottas
      %blockquote= lorem.paragraph
      %cite= (lorem.words 7).capitalize
      %br
      = link_to "Director's Foreword", "#{site_url}/foreword", :class => "button"
  .cover-explore
    %h2.centered Explore the Collection
    = partial(:grid, :locals => { :collection => find_in_catalogue("featured", true) })
    = link_to "View the Catalogue", "#{site_url}/catalogue", :class => "button"
  .cover-map
    %h2.centered Map of South Italy and Sicily
    #map
    .cover-map-inner
      = link_to "View Full Map", "#{site_url}/map", :class => "button"
  .cover-colophon
    .cover-colophon-inner
      %h2.centered Colophon
      %p= lorem.paragraph
      %p= lorem.paragraph
      .colophon-logo
        = tag :img, :src => image_path("getty_logo.svg"), :alt => "Getty Logo"
